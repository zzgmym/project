/* pages/person/person.wxss */

.container{
    padding:0rpx;
    margin:0rpx;
}
.user_base_info{
    width:100%;
    display:flex;
    flex-direction: row;
    justify-content: center;
    font-size:30rpx;
    margin:80rpx 0rpx;
}
.user_avatar{
    width:200rpx;
    height:200rpx;
    margin-right:60rpx;
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    border-bottom:1rpx solid #f1f1f1;
}
.userinfo-nickname {
    color: #aaa;
}
.user_avatar image{
    width:100%;
    height:100%;
}
.user-info{
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f1f1f1;
}
.info{
    position: relative;
}
.btn{
    margin:0rpx 0 20rpx;
    font-size:38rpx;
    text-align: center;
    color:#d24a58;
    width: 95%
}

.usermotto {
    margin-top: 200px;
}